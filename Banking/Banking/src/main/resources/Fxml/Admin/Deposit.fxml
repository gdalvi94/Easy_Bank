<AnchorPane prefHeight="750.0" prefWidth="800.0" styleClass="anchor" stylesheets="@../../css/ClientOptions.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Banking.controllers.admin.DepositController">
   <VBox layoutX="10.0" layoutY="90.0" prefHeight="570.0" prefWidth="780.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="90.0">
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="780.0">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Search By Username">
            <font>
               <Font size="16.0" />
            </font></Text>
         <TextField fx:id="username_txt">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin></TextField>
         <Button fx:id="search_btc" mnemonicParsing="false" prefHeight="26.0" prefWidth="110.0" styleClass="btn-color" stylesheets="@../../css/ClientOptions.css" text="Search">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
            <font>
               <Font size="16.0" />
            </font></Button>
      </HBox>
      <ListView fx:id="result_listview" prefHeight="200.0" prefWidth="780.0" styleClass="list-cell" stylesheets="@../../css/Accounts.css" />
      <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="315.0" prefWidth="100.0">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Deposit Section">
            <font>
               <Font size="16.0" />
            </font></Text>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Amount">
            <VBox.margin>
               <Insets bottom="15.0" top="20.0" />
