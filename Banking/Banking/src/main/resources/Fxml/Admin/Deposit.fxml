            <font>
               <Font size="16.0" />
            </font></Text>
         <TextField fx:id="amount_fld" prefHeight="32.0" prefWidth="243.0" />
         <Button fx:id="deposit_btn" mnemonicParsing="false" prefHeight="38.0" prefWidth="143.0" styleClass="btn-color" stylesheets="@../../css/ClientOptions.css" text="Deposit Money">
            <VBox.margin>
               <Insets top="25.0" />
            </VBox.margin>
            <font>
               <Font size="16.0" />
            </font></Button>
         <Label fx:id="Error_lbl_Deposit" textFill="#d91717" />
      </VBox>
   </VBox>
</AnchorPane>
